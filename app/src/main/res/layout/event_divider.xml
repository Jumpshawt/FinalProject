<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_container"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="50dp"
        android:elevation="20dp"

        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">
        <Button
            android:id="@id/like"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@id/join"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@id/share"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="20dp"
                    android:contentDescription="image"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_camera" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/event_time"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:text="Starts in : "
                        android:textColor="@color/event_time"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/event_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Event Name"
                        android:textColor="@color/event_location_fart"
                        android:textSize="48sp"></TextView>

                    <TextView
                        android:id="@+id/event_location"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Event location"
                        android:textColor="@color/event_location"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/event_org"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Organized by"
                        android:textColor="@color/event_org"
                        android:textSize="15sp"></TextView>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>